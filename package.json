{
  "name": "fewer-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts/"
  ],
  "scripts": {
    "preinstall": "npx yarn-only",
    "prepare": "yarn run clean && yarn run build",
    "test": "jest",
    "build": "tsc --build packages/*",
    "clean": "yarn run build --clean",
    "prettier": "prettier --write ./packages/**/* ./docs/**/* *.md",
    "integration:local": "./env.sh yarn run _integration:local",
    "_integration:local": "yarn run _integration:prep && jest --config=jest.config.integration.js",
    "_integration:prep": "ts-node scripts/integrationPrep.ts"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.7",
    "jest": "^23.6.0",
    "jest-diff": "^23.6.0",
    "lerna": "^3.5.1",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.4",
    "ts-node-dev": "^1.0.0-pre.30",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.2.2"
  }
}
